@model List<Ativo>

@{
    ViewData["Title"] = "Lista de Ativos";
    var hasResults = Model != null && Model.Any();
}

<div class="container mt-5">
    <h2 class="mb-4">Lista de Ativos</h2>

    @if (Model != null && hasResults)
    {
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Código</th>
                    <th>Nome</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ativo in Model)
                {
                    <tr>
                        <td>@ativo.Id</td>
                        <td>@ativo.Codigo</td>
                        <td>@ativo.Nome</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning mt-3" role="alert">
            Nenhum ativo encontrado.
        </div>
    }
</div>
